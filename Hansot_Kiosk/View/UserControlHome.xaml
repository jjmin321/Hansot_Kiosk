<UserControl x:Class="Hansot_Kiosk.UserControlHome"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hansot_Kiosk"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="AntiqueWhite">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="6*"/>
            </Grid.RowDefinitions>
            <MediaElement Grid.Row="0" Name="HansotVideo" Stretch="Fill" VerticalAlignment="Top" UnloadedBehavior="Manual" MediaEnded="HansotVideoEnded" 
                  Source="{Binding Commercial}">
            </MediaElement>
            <StackPanel Grid.Row="1" Orientation="Vertical">
                <TextBlock Text="안녕하세요. 주문을 원하시면 아래 주문버튼을 눌러주세요." TextAlignment="Center" FontSize="20"/>
                <Button Click="MoveToOrder" Width="100" Background="Blue" Foreground="White">주문하기</Button>           
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
